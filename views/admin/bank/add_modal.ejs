<!-- Modal -->
<div class="modal fade" id="add-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Bank</h1>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times</span>
        </button>
      </div>
      <form action="/admin/bank" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" name="name" placeholder="Enter name" required />
            </div>
            <label for="name">Name Bank</label>
            <input type="text" class="form-control" name="nameBank" placeholder="Enter name bank" required />
          </div>
          <div class="form-group">
            <label for="name">Nomor Rekening</label>
            <input type="text" class="form-control" name="nomorRekening" placeholder="Enter nomor rekening" required />
          </div>
          <div class="form-group">
            <label for="name">Image</label>
            <input type="file" class="form-control" name="image" required />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
